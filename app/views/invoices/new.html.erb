<% content_for :title do %>
  Invoices
<% end %>

<article class="module width_full">
	<header><h3>New invoice</h3></header>
	<div class="module_content">
  <%= semantic_form_for [@customer, @invoice] do |f| %>
    <%= f.inputs :date, :paid, :payment_date %>
    <%= f.input :slips, :as => :check_boxes, :collection => @slips %>
    <%= f.buttons %>
  <% end %>
  </div>
</article>